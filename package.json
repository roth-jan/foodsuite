{
  "name": "foodsuite-backend",
  "version": "1.0.0",
  "description": "Backend API for FoodSuite - Professional Kitchen Management System",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "prod": "NODE_ENV=production DB_TYPE=postgres node server.js",
    "staging": "NODE_ENV=staging DB_TYPE=postgres node server.js",
    "test": "jest",
    "test:playwright": "npx playwright test",
    "test:production": "node scripts/production-cli.js health --deep",
    "init-db": "node scripts/init-database.js",
    "seed-db": "node scripts/seed-database.js",
    "reset-db": "node scripts/reset-database.js",
    "backup": "node scripts/production-cli.js backup --create",
    "deploy:staging": "node scripts/production-cli.js deploy --env staging",
    "deploy:production": "node scripts/production-cli.js deploy --env production",
    "rollback:production": "node scripts/production-cli.js rollback --env production",
    "monitor": "node scripts/production-cli.js monitor --watch",
    "health": "node scripts/production-cli.js health"
  },
  "keywords": [
    "foodsuite",
    "kitchen",
    "management",
    "restaurant",
    "inventory",
    "recipes",
    "orders"
  ],
  "author": "FoodSuite Development Team",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-rds": "^3.848.0",
    "@aws-sdk/client-s3": "^3.850.0",
    "@playwright/mcp": "^0.0.31",
    "@playwright/test": "^1.54.1",
    "bcryptjs": "^2.4.3",
    "commander": "^12.0.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "handlebars": "^4.7.8",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "node-fetch": "^2.7.0",
    "pg": "^8.16.3",
    "pg-pool": "^3.6.2",
    "playwright": "^1.54.1",
    "puppeteer": "^24.15.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
